<% @posts.reverse.each do |post| %>
		<div class="panel">
			<div class="row panel-body">
			<div class="col-md-3">
			</div>
			<div class="col-md-3 text-right">
   			<a href="board/show/<%=post.id%>"><img src="<%= post.image_url(:thumb) %>"></a>
			</div>
			<div class="col-md-6">
		  <h4><a href="board/show/<%=post.id%>"><%= post.title %></a>&nbsp;<span class="badge"><%= post.comments.count%></span></h4>
			<p><span class="label label-warning"><%= post.category %></span></p>
		  <p><strong><%= post.user.username %></strong></p>
			</div>
		</div>
	</div>
	<% end %>

