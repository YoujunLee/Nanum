<div class="container">
	<% if !flash[:alert].nil? %>
	<div class="alert alert-danger">
		<%= flash[:alert] %>
	</div>
	<% end %>
	
	<div class="row">
		<div class="col-md-4">
		</div>

		<div class="col-md-4 text-center">
			<h3 class="form-heading">게시글 작성</h3>

			<form action="/board/write_complete" method="post" enctype="multipart/form-data">
  			<p>+ 분류:
			  <select name="post_category">
    			<option value="중고장터">중고장터</option>
			    <option value="공동구매">공동구매</option>
   		    <option value="나눔">나눔</option>
			    <option value="도와주세요">도와주세요</option>
			  </select>
				</p>
			  <p><input class="form-input" type="text" name="post_title" placeholder="제목을 입력하세요." autocomplet="off"></p>
				<p><input class="form-input" type="text" name="post_price" placeholder="가격을 입력하세요."autocomplet="off"></p>
				<p><input class="form-input" type="text" name="post_number" value="<%= @user.number %>" placeholder="Phone or KaKaO"autocomplet="off"></p>
			  <p><textarea class="form-textarea" name="post_content" placeholder="내용을 입력하세요."></textarea></p>
				<p>※ 사진 업로드</p>
				<p><input type="file" name="image"></p>
			  <input class="btn btn-lg btn-block"  type="submit" value="작성 완료">
			</form>
		</div>
		
		<div class="col-md-4">
		</div>
	</div>
</div>
